<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event__main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user.alumni.event.Event_MainActivity">

        <TextView
            android:id="@+id/calendarNameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" " />

        <Button
            android:layout_below="@+id/calendarNameTxtView"
            android:id="@+id/openCalendarBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_calendar"
            android:onClick="openCalendar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frag"
            android:text="new activity"
            android:layout_marginTop="20dp" />

        <FrameLayout
            android:id="@+id/your_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
        </FrameLayout>
</LinearLayout>
